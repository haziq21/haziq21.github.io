---
import GitHub from "./svg/GitHub.astro";

interface Props {
    name: string;
    year: string;
    link: string;
    tags: string[];
    description: string;
}

const { name, year, link, tags, description } = Astro.props;
---

<li max-w="100 @lg:180 @4xl:70" flex="~ col @lg:row @4xl:col" mb="14 @4xl:0">
    <div
        aspect="[3/2]"
        min-w="50 @4xl:70"
        m="@lg:r-8 @4xl:r-0"
        bg-teal-700
        rounded-lg
    >
    </div>

    <div pt="4 @lg:2 @4xl:4">
        <div flex items-center px="4 @lg:0 @4xl:4" mb-1>
            <span font-semibold text-lg mr-3>{name}</span>
            <span bg-gray-300 w-1 h-1 rounded-full mr-3></span>
            <span text-gray-200 mr-auto>{year}</span>
            <a href={link} target="_blank"><GitHub /></a>
        </div>
        <div px="4 @lg:0 @4xl:4" mb-5 flex gap-2>
            {
                tags.map((t) => (
                    <span text="xs teal-200" bg-teal-800 p="x-2 y-1" rounded-md>
                        {t}
                    </span>
                ))
            }
        </div>

        <!-- Project description -->
        <p px="3 @lg:0 @4xl:3" text-sm>{description}</p>
    </div>
</li>
