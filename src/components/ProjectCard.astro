---
import GitHubSmaller from "./svg/GitHubSmaller.astro";

interface Props {
  name: string;
  year: string;
  link: string;
  tags: string[];
  description: string;
  image: string;
}

const { name, year, link, tags, description, image } = Astro.props;
---

<li
  max-w="100 @lg:180 @4xl:70"
  flex="~ col @lg:row @4xl:col"
  items-center
  mb="14 @4xl:0"
>
  <img
    src={image}
    alt=""
    aspect="[3/2]"
    rounded-lg
    max-w="@lg:60 @4xl:70"
    m="@lg:r-8 @4xl:r-0"
    bg-teal-700
  />

  <div pt="4 @lg:2 @4xl:4">
    <div flex items-center px="4 @lg:0 @4xl:4" mb-1>
      <span
        font-semibold
        text-lg
        after="inline-block mr-3 ml-2 mb-1 bg-gray-300 w-1 h-1 rounded-full"
      >
        {name}
      </span>
      <span text-gray-200>{year}</span>
    </div>
    <div px="4 @lg:0 @4xl:4" mb-5 flex="~ wrap" gap-2>
      {
        tags.map((t) => (
          <span text="xs teal-200" bg-teal-800 p="x-2 y-1" rounded-md>
            {t}
          </span>
        ))
      }
    </div>

    <!-- Project description -->
    <p px="3 @lg:0 @4xl:3" mb-4 text-sm>{description}</p>

    <div flex justify-end px="4 @lg:0 @4xl:4">
      <a
        href={link}
        target="_blank"
        flex
        gap-2
        text="sky-300 sm"
        hover:underline
      >
        Open in GitHub <GitHubSmaller />
      </a>
    </div>
  </div>
</li>
